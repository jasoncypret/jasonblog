<!-- Carousel Container -->
<div id="carousel" class="carousel">
  <div class="carousel__wrapper">
    <!-- Each slide gets a "data-large" attribute for the lightbox image source -->
    <%= image_tag 'work/adjust_margin_teaser.png', class: 'carousel__slide active lazyload', data: { large: image_path('work/adjust_margin_teaser.png') } %>
    <%= image_tag 'work/adt_iphone_expanded_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/adt_iphone_expanded_teaser.png') } %>
    <%= image_tag 'work/adt_iphone_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/adt_iphone_teaser.png') } %>
    <%= image_tag 'work/adt_mobile_sm_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/adt_mobile_sm_teaser.png') } %>
    <%= image_tag 'work/bloom_1x.png', class: 'carousel__slide lazyload', data: { large: image_path('work/bloom_1x.png') } %>
    <%= image_tag 'work/bloom_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/bloom_teaser.png') } %>
    <%= image_tag 'work/brainspace-dribbble_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/brainspace-dribbble_teaser.png') } %>
    <%= image_tag 'work/buffer-hover-icon@2x.png', class: 'carousel__slide lazyload', data: { large: image_path('work/buffer-hover-icon@2x.png') } %>
    <%= image_tag 'work/christmas_card_teaser.png', class: 'carousel__slide lazyload', data: { large: image_path('work/christmas_card_teaser.png') } %>
  </div>
  <button id="carousel-prev" class="carousel__control carousel__control--prev" aria-label="Previous slide">&#10094;</button>
  <button id="carousel-next" class="carousel__control carousel__control--next" aria-label="Next slide">&#10095;</button>
</div>

<!-- Lightbox Modal -->
<div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-label="Image viewer">
  <div class="lightbox__content">
    <button id="lightbox-close" class="lightbox__close" aria-label="Close lightbox">&times;</button>
    <img id="lightbox-img" src="" alt="Large view of selected image" class="lightbox__img">
  </div>
</div>

