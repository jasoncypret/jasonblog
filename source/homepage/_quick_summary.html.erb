<div class="homepage-summary">
  <div class="row">
    <!-- Personal Approach Column -->
    <div class="col-lg-4">
      <div class="summary-section">
        <% if data.site.personal_approach %>
          <p class="approach-text"><%= data.site.personal_approach.title %></p>
        <% end %>
      </div>
    </div>

    <!-- Work Experience Column -->
    <div class="col-lg-4">
      <div class="summary-section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        
        <% if data.site.work_experience %>
          <% data.site.work_experience.each do |job| %>
            <div class="work-item">
              <div class="work-years"><%= job.years %></div>
              <h4 class="work-title"><%= job.title %> <span class="work-company">@ <%= job.company %></span></h4>
              <p class="work-description"><%= job.description %></p>
            </div>
          <% end %>
        <% end %>
        
        <% resume_link = data.site.downloads.find { |d| d.title == "resume" } %>
        <% if resume_link %>
          <%= link_to "See All Experience →", resume_link.url, class: "see-all-link", target: "_blank" %>
        <% end %>
      </div>
    </div>

    <!-- Blog Posts Column -->
    <div class="col-lg-4">
      <div class="summary-section">
        <h3 class="section-title">FROM THE BLOG</h3>
        
        <% blog.articles[0...3].each do |article| %>
          <div class="blog-item">
            <% if article.data.image %>
              <div class="blog-image">
                <%= link_to image_tag(article.data.image, alt: article.title), article.url %>
              </div>
            <% end %>
            
            <div class="blog-content">
              <div class="blog-date"><%= article.date.strftime('%b %eth %Y').upcase %></div>
              <h4 class="blog-title">
                <%= link_to article.title, article.url %>
              </h4>
            </div>
          </div>
        <% end %>
        
        <%= link_to "Go to Blog →", "/blog/", class: "see-all-link" %>
      </div>
    </div>
  </div>
</div>